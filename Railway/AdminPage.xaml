<Page x:Class="Railway.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Railway"
      mc:Ignorable="d" 
      d:DesignHeight="430" d:DesignWidth="637"
      Title="AdminPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="80*"/>
        </Grid.RowDefinitions>
        <Label x:Name="welcomeLabel" Grid.Row="0" Content="Welcome to admin home page!" HorizontalAlignment="Center"  VerticalAlignment="Center" FontSize="21"/>
        <Label x:Name="selectLabel" Grid.Row="1" Content="Please choose one of the services offered left" HorizontalAlignment="Center"  VerticalAlignment="Center" FontSize="18"/>
    </Grid>
</Page>
